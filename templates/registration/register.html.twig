{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="container-fluid registerFormContainer bg-light py-5 h-100 d-flex align-items-center">
		<div class="container">
			<div class="card border-0 shadow rounded">
				<div class="card-body p-5">
					<h1 class="mb-4 text-center text-primary">
						<i class="fas fa-user-plus"></i>
						Inscription</h1>

					{{ form_start(registrationForm, {'attr': {'class': 'g-3'}}) }}

					<div class="mb-3">
						<i class="fa fa-envelope form-icon"></i>
						<label for="{{ registrationForm.email.vars.id }}" class="form-label">Email</label>
						{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
					</div>

					<div class="mb-3">
						<i class="fa fa-key form-icon"></i>
						<label for="{{ registrationForm.plainPassword.first.vars.id }}" class="form-label">Mot de passe</label>
						{{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
					</div>

					<div class="mb-3">
						<i class="fa fa-key form-icon"></i>
						<label for="{{ registrationForm.plainPassword.second.vars.id }}" class="form-label">Confirmez le mot de passe</label>
						{{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
					</div>

					<div class="mb-3">
						<i class="fa fa-user form-icon"></i>
						<label for="{{ registrationForm.vars.id }}" class="form-label">Prénom</label>
						{{ form_widget(registrationForm.first_name, {'attr': {'class': 'form-control'}}) }}
					</div>

					<div class="mb-3">
						<i class="fa fa-user form-icon"></i>
						<label for="{{ registrationForm.last_name.vars.id }}" class="form-label">Nom</label>
						{{ form_widget(registrationForm.last_name, {'attr': {'class': 'form-control'}}) }}
					</div>

					<div class="mb-3">
						<i class="fa fa-phone form-icon"></i>
						<label for="{{ registrationForm.phone.vars.id }}" class="form-label">Téléphone</label>
						{{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control'}}) }}
					</div>

					<div class="col-12 d-flex flex-column justify-content-center mt-5">
						<div class="form-check mb-3 d-flex justify-content-center">
							{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
							<label for="{{ registrationForm.agreeTerms.vars.id }}" class="form-check-label ms-2">
								J'accepte les conditions</label>
						</div>
						<div class="d-flex justify-content-center">
							<button type="submit" class="btn btn-primary mt-3">
								<i class="fas fa-paper-plane"></i>
								S'inscrire
							</button>
						</div>
					</div>


					{{ form_end(registrationForm) }}
				</div>
			</div>
		</div>
	</div>


{% endblock %}
